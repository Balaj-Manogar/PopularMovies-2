<RelativeLayout android:id="@+id/main_fragment_grid"
    style="@style/PosterLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baali.nano.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/grid_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/main_poster"
        android:gravity="center_horizontal"
        android:horizontalSpacing="@dimen/posterCellSpacing"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/posterCellSpacing"

        />

</RelativeLayout>
